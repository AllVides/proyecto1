
@{
    ViewData["Title"] = "Tablero";
}

<h1>Tablero</h1>
<div class="text-center">
    <div class="tabla">
    @{

        @for (int i = 0; i < 8; i++)
        {

            @for (int j = 0; j < 8; j++)
            {
                @if (i == 3 && j == 3)
                {<div class="bloque negro flotar"></div>}
                else if (i == 4 && j == 4)
                {
                    <div class="bloque negro flotar"></div>
                }
                else if (i == 3 && j == 4)
                {
                    <div class="bloque blanco flotar"></div>
                }
                else if (i == 4 && j == 3)
                {
                    <div class="bloque blanco flotar"></div>
                }
                else
                {
                    <div class="bloque verde flotar"></div>
                }
            }

        }
    }
    </div>
</div>


